{
  "name": "@peepopay/api",
  "version": "1.0.0",
  "private": true,
  "description": "PeepoPay API Server",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "npm run sync-types && tsx watch src/index.ts",
    "dev:worker": "tsx watch src/worker.ts",
    "build": "npm run generate:openapi && npm run sync-types && tsc",
    "start": "node dist/index.js",
    "start:worker": "node dist/worker.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "generate:openapi": "tsx src/openapi/generator.ts",
    "sync-types": "tsx scripts/sync-types.ts",
    "lint": "eslint src --ext .ts",
    "test": "vitest"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "dotenv": "^16.4.1",
    "drizzle-orm": "^0.29.3",
    "postgres": "^3.4.3",
    "better-auth": "^0.8.0",
    "stripe": "^14.13.0",
    "zod": "^3.22.4",
    "redis": "^4.6.12",
    "amqplib": "^0.10.4",
    "nodemailer": "^6.9.8",
    "date-fns": "^3.2.0",
    "nanoid": "^5.0.4",
    "@asteasolutions/zod-to-openapi": "^7.0.0",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/node": "^20.11.5",
    "@types/nodemailer": "^6.4.14",
    "@types/amqplib": "^0.10.5",
    "@types/swagger-ui-express": "^4.1.6",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "drizzle-kit": "^0.20.10",
    "openapi-typescript": "^6.7.3",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "vitest": "^1.2.1"
  }
}
